<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    tools:context=".lessons.Lesson9">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F1F6F9">
        <Button
            android:id="@+id/btn_back"
            android:background="@null"
            android:drawableStart="@drawable/btn_back"
            android:layout_width="48dp"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="@string/back_button"/>
        <TextView
            android:text="Lesson 9"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Quarter 1 – Module 9:\nMultiplication of Decimals andMixed Decimals"
                            android:textSize="17sp"
                            android:paddingHorizontal="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btn_tts"
                            android:text="Read"
                            android:textAlignment="textStart"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_secondary_button"
                            android:drawableStart="@drawable/ic_mic_secondary"
                            android:drawablePadding="10dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:background="@color/light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/tv_lessons_description_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:padding="10dp"
                        android:text="Multiplying decimals and mixed decimals with factors up to two decimal places is just like multiplying with whole numbers. The only thing to always remember is on how to put the decimal point in the final product in its correct place. To be able to do that in the end, answer the activities sequenced for you. The activities will guide you on how to place the decimal point in the product correctly. As we go on with our lesson, hope you will have fun and enjoy the activities." />

                    <TextView
                        android:text="Example:"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.ortiz.touchview.TouchImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:contentDescription="example"
                        android:src="@drawable/smple_mod91"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_whats_in"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <TextView
                            android:text="What’s New"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/btn_tts_whats_new"
                            android:text="Read"
                            android:textAlignment="textStart"
                            android:background="@drawable/btn_secondary_button"
                            android:drawableStart="@drawable/ic_mic_secondary"
                            android:drawablePadding="10dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:text="Situation Frying Time:"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="Mother buys 23 pieces of dressed chicken to be fried for her restaurant. How much will she pay if each kilo costs ₱ 143.15?"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.ortiz.touchview.TouchImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:contentDescription="example"
                        android:src="@drawable/smple_09"/>
                    <TextView
                        android:text="Example:"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <com.ortiz.touchview.TouchImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:contentDescription="example"
                        android:src="@drawable/smple_091"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_whats_in"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <TextView
                            android:text="What is It"
                            android:textSize="18sp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="10dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/btn_tts_what_is_it"
                            android:text="Read"
                            android:textAlignment="textStart"
                            android:background="@drawable/btn_secondary_button"
                            android:drawableStart="@drawable/ic_mic_secondary"
                            android:drawablePadding="10dp"
                            android:paddingHorizontal="10dp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_marginTop="10dp"
                        android:background="@color/light_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="What is the question?\n\n➢ How much will she pay for the dressed chicken?\n\nWhat will you do to answer the question?\n\n➢ Multiply ₱ 143.15 by 23\n\nHow many decimal places are there in the multiplicand and multiplier?\n\n➢ ( 2 places in the multiplicand and none in the multiplier )\n\nSo, putting the same number of decimal places in the final product, the answer is ₱ 3,292.45\n\nMother will be paying ₱ 3,292.45 for the chickens."
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.ortiz.touchview.TouchImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:contentDescription="example"
                        android:src="@drawable/smple_009"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#ffffff"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_width="300dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Tutorial"
                                android:textSize="18sp"
                                android:paddingHorizontal="10dp"
                                android:paddingTop="10dp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:padding="10dp"
                                android:text="Are you struggling with the numbers mixing in your head? In this tutorial, we will guide you through the step-by-step process of this lesson!"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/btn_watch_tutorial"
                                android:text="Watch Tutorial"
                                android:textColor="@color/black"
                                android:background="@drawable/btn_secondary_button"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:paddingHorizontal="16dp"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="300dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="@drawable/bg_gradient_quiz"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:text="Quizzes"
                                android:textSize="18sp"
                                android:paddingHorizontal="10dp"
                                android:paddingTop="10dp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_semi_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:padding="10dp"
                                android:text="Now let's measure your problem-solving skills with the quiz composed of true or false and multiple-choice questions to assess your level of understanding."
                                android:textColor="#F3F3F3"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/btn_start_quiz"
                                android:text="Start Quiz!"
                                android:textColor="@color/white"
                                android:background="@drawable/btn_primary_button"
                                android:drawablePadding="10dp"
                                android:layout_marginTop="10dp"
                                android:paddingHorizontal="16dp"
                                android:layout_marginStart="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>