                        <TextView
                            android:text="Quarter 1 – Module 17:\nDifferentiating Repeating from Terminating and Non Terminating Decimal Quotient"
                            android:textSize="16sp"
                            android:paddingHorizontal="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
