        android:layout_marginTop="16dp"
        app:animateOnBoundary="false"
        app:fillColor="@android:color/white"
        app:pageColor="#00000000"
        app:radius="4dp"
        app:slideInterval="5000"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="1dp"/>

